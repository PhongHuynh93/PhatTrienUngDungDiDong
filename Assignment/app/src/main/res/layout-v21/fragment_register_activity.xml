<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/register_coordinator"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorChatApp"
                 tools:context="dhbk.android.gps_osm_fragment.Fragment.ChatFragment.RegisterActivityFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="60sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:transitionName="sign_up"/>

        <EditText
            android:id="@+id/email_register"
            android:inputType="textEmailAddress"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:layout_gravity="center_horizontal|center_vertical"
            android:hint="Email"/>

        <EditText
            android:id="@+id/pass_register"
            android:inputType="textPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="50dp"
            android:hint="Password"/>

        <EditText
            android:id="@+id/nick_register"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="100dp"
            android:hint="Nick name"/>

        <Button
            android:id="@+id/button_register"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="160dp"
            android:background="@drawable/bg_edittext_normal"
            android:backgroundTint="@android:color/transparent"
            android:hint="Sign up"
            android:textColor="@color/colorWhite"/>

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
