<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/type_chat_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorChatApp"
                 tools:context=".Fragment.ChatFragment.ChatActivityFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nick_choose_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Hi, "
                android:textColor="@color/colorWhite"
                android:textSize="40sp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Please choose your chat room!"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>


        <Button
            android:id="@+id/button_private_chat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/bg_edittext_normal"
            android:backgroundTint="@color/colorOrange"
            android:hint="Private Chat"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/button_public_chat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_edittext_normal"
            android:backgroundTint="@android:color/transparent"
            android:hint="Public Chat"
            android:textColor="@color/colorWhite"/>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>